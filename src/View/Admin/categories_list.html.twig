{% extends "adminlayout.html.twig" %}

{% block title %}Liste des categories{% endblock %}

{% block content %}

    {% for category in categories %}
        <div class = main-container-admin>
            <div class = main-container-admin-1>
                {{ category.name }}
            </div>

            <div class = main-container-admin-2>
                <a href="{{ "/categoriesEdit/" ~ category.id }}"><button type="button" class="btn btn-primary">Editer</button></a>
                <a href="{{ "/categoriesDelete/" ~ category.id }}"><button type="button" class="btn btn-danger">Supprimer</button></a>
            </div>

        </div>
    {% endfor %}

{% endblock %}