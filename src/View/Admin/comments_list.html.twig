{% extends "adminlayout.html.twig" %}

{% block title %}Liste des commentaires{% endblock %}

{% block content %}

    {% for comment in comments %}
        <div class = main-container-admin>
            <div class = main-container-admin-1>
                {{ comment.name }}
            </div>

            <div class = main-container-admin-2>
                <a href="{{ "/Admin/commentsEdit/" ~ comment.id }}"><button type="button" class="btn btn-primary">Editer</button></a>
                <a href="{{ "/Admin/commentsDelete/" ~ comment.id }}"><button type="button" class="btn btn-danger">Supprimer</button></a>
            </div>

        </div>
    {% endfor %}

{% endblock %}