{% extends "adminlayout.html.twig" %}

{% block title %} Add a country {% endblock %}

{% block content %}

    <div class ="main-container-add">
        <form action="" enctype="multipart/form-data" method="POST" style="display:flex; flex-direction:column;">
            <div class="form-group">
                <label for="name">Entrez le nom du pays</label>
                <input type="text" class="form-control" name="country_name" id="name" placeholder="Entrez le nom du pays">
            </div>
            <div class="form-group">
                <label for="continent">Sélectionnez un continent pour ce pays</label>
                <select name="country_continents_id" class="form-control" id="continent">
                    {% for continent in continents %}
                        <option value="{{ continent.id }}">{{ continent.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group" >
                <!-- MAX_FILE_SIZE doit précéder le champ input de type file -->
                <input type="hidden" name="MAX_FILE_SIZE" value="500000" />
                Sélectionner une image pour ce pays : <input name="country_image" type="file" />
            </div>
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </form>
    </div>
{% endblock %}
