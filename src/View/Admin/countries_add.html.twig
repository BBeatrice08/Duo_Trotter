{% extends "adminlayout.html.twig" %}

{% block title %} Add a country {% endblock %}

{% block content %}
    <div class ="main-container-add">
        <form action="" method="POST" style="display:flex; flex-direction:column;">
            <div class="form-group">
                <label for="name">Entrez le nom du pays</label>
                <input type="text" class="form-control" name="country_name" id="name" placeholder="Entrez le nom du pays">
            </div>
            <div class="form-group">
                <label for="continent">SÃ©lectionnez un continent pour ce pays</label>
                <select name="country_continents_id" class="form-control" id="continent">
                    {% for continent in continents %}
                        <option value="{{ continent.id }}">{{ continent.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="image">Entrez une image pour ce pays</label>
                <input type="text" class="form-control" name="country_image" id="image" placeholder="Entrez le lien d'une image">
            </div>
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </form>
    </div>
{% endblock %}
