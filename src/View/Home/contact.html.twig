{% extends 'layout.html.twig' %}

{% block title %}Contactez-nous{% endblock %}
{% block content %}
    <div class="sub-container">
        <div class="form-container">
            <form class="form" method="post">
                <div class="form-group">
                    <label for="name">Votre nom</label>
                    <input type ="text" class="form-control" id="name" name="name" placeholder="{{ nameError }}">
                </div>
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder=" {{ emailError }}">
                </div>
                <div class="form-group">
                    <label for="message">Votre message</label>
                    <textarea class="form-control" name="message" id="message" rows="3" placeholder="{{ messageError }}"></textarea>
                </div>
                <div class="flex-button">
                    <button type="submit" class="btn btn-primary button-center">Envoyer le message</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
