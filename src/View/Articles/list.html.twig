{% extends "layout.html.twig" %}


{% block title %}Derniers Articles{% endblock %}

{% block content %}
    <div class = "main-articles" >
    <h1>Derniers Articles</h1>
    {% for article in articles %}
        <div class = "article">
        <h2>{{ article.title }}</h2>
            <div class = "img-container">
                <img src="{{ article.image }}" class ="image">
            </div>
        <p>{{ article.date }}</p>
        <p>{{ article.content }}</p>
        <button type="submit" class="btn btn-warning text-white">Lire</button>
        </div>
    {% endfor %}
    </div>
{% endblock %}

