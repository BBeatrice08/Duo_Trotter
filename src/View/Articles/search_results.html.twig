{% extends "layout.html.twig" %}

{% block title %}Tous les articles{% endblock %}

{% block content %}
    <div class = "articles-list">
        {% for result in results %}
            {% for article in articles %}
                {% if result in article.title or result in article.content%}
            <div class="article-card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{ article.image }}" class="card-img" alt="Image d'illustration {{ result.title }}">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.content|slice(0,150) }}...</p>
                            <a href="{{ "/articles/show/" ~ article.id }}"><button type="button" class="btn btn-primary btn-sm">Lire l'article</button></a>
                            <p class="card-text"><small class="text-muted">{{ article.date }}</small></p>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {% endfor %}
        {% endfor %}
    </div>
{% endblock %}
