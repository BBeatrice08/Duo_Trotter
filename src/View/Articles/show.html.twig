{% extends "layout.html.twig" %}

{% block title %}{{ articles.title }}{% endblock %}

{% block content %}
    {% if articles == false %}
        <h2>Cet article n'existe pas !</h2>
        <h4>Il a peut-être été supprimé ou pas encore écrit !</h4>
    {% else %}
        <div class = "articles-list">
            <div class="article-card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{ articles.image }}" class="card-img" alt="Image d'illustration {{ article.title }}">
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ articles.title }}</h5>
                                <p class="card-text">{{ articles.content }}</p>
                                <p class="card-text"><small class="text-muted">{{ articles.date }}</small></p>
                                <div class="flex-button-article">
                                    <a href="{{"/comments/add/" ~ articles.id }}"><button class="btn btn-primary btn-sm button-article">Ajouter un commentaire</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class = "comments">
        {% if comments is empty %}
            <h3>Il n'y a pas encore de commentaires sur cette article !</h3>
        {% else %}
            <h3>Commentaires</h3>
            <div class="card">
            {% for comment in comments %}
                    <h5 class="card-title">{{ comment.user_name }}</h5>
                    <small>{{ comment.date }}</small>
                    <p class="card-body">{{ comment.content }}</p>
            {% endfor %}
            </div>
        {% endif %}
        </div>
    {% endif %}
{% endblock %}
