{% extends "layout.html.twig" %}

{% block title %}{{ articles.title }}{% endblock %}

{% block content %}
    {% if articles == false %}
        <h2>Cet article n'existe pas !</h2>
        <h4>Il a peut-être été supprimé ou pas encore écrit !</h4>
    {% else %}
        <div class = "articles-list">
            <div class="article-card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{ articles.image[9:] }}" class="card-img" alt="Image d'illustration {{ article.title }}">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h5 class="card-title">{{ articles.title }}</h5>
                            <p class="card-text">{{ articles.content }}</p>
                            <p class="card-text"><small class="text-muted">{{ articles.date }}</small></p>
                            <a href="{{"/comments/add/" ~ articles.id }}"><button>Ajouter un commentaire</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class = "comments">
        {% if comments is empty %}
            <h4>Il n'y a pas encore de commentaires sur cette article !</h4>
        {% else %}
        <h3>Commentaires</h3>
            </div>
        <hr>
            {% for comment in comments %}
                <div>
                    <h3>{{ comment.user_name }}</h3>
                    <small>{{ comment.date }}</small>
                    <p>{{ comment.content }}</p>
                    <hr>
                </div>
            {% endfor %}
        {% endif %}
    {% endif %}

{% endblock %}
